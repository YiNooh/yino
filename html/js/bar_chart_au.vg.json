{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Yino111/yino/main/3179_assignment2%20/data/type_au.csv"
  },
  "title": {"text": ["Alcohol recorded per capita consumption (in litres of pure alcohol) - Beverage Types"],
  "fontSize":17,
  "anchor": "middle",
  "color":"#c5a516c2"
  },
  "background": "#fcf9f0",
  "width": 1000,
  "height": 150,
  
  "mark": {
    "type": "circle",
    "opacity": 0.2,
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {"grid": false}
    },
    "y": {"field": "type", "type": "nominal", "axis": {"title": ""}},
    "size": {
      "field": "consumption",
      "type": "quantitative",
      "title": "Consumption per capita (litres)",
      "legend": {"clipHeight": 30},
      "scale": {"rangeMax": 900}
    },
    "color": {"field": "type", "type": "nominal", "legend": null},
    "tooltip": [ {"field": "country", "type": "nominal"}, 
      {"field": "year", "type": "quantitative", "format": ","}, 
      {"field": "consumption", "type": "quantitative", "format": ".2f"}
      ]
  }
}