{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total alcohol consumption per capita (15+ years of age) in 2018",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://github.com/Yino111/yino/blob/main/total-alcohol-consumption-per-capita-litres-of-pure-alcohol.xlsx"
        },
        "key": "Country",
        "fields": ["alcohol consumption"]
      }
    },
    {"calculate": "datum.alcohol consumption + 0.1", "as": "alcohol consumption"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "alcohol consumption",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "alcohol consumption", "type": "quantitative"}
    ]
  }

}
