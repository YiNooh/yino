{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total alcohol consumption per capita (15+ years of age) in 2018",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/JamesPann/JamesPann/main/custom.geo.json",
    "format": {
          "type": "topojson",
          "feature": "custom.geo"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Yino111/yino/main/alcohol_consumption_map/data/2018_alcohol_consumption_data.csv"
        },
        "key": "Country",
        "fields": ["Consumption"]
      }
    }
  ],
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Consumption",
      "type": "quantitative",
      "scale": { "type": "threshold", "domain": [2, 6, 10, 13], "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"] } },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Consumption", "type": "quantitative"}
    ]
  }

}
